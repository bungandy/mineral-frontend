{% extends "default.njk" %}]

{% block content %}
<main id="content">

    {% set titlePage = "Login" %}
    {% set subTitlePage = "Silakan masuk ke dalam akun kamu." %}
    {% include "components/header-page.njk" %}

    <section id="signin">
        <div class="container-fluid">
            <div class="row justify-content-center align-items-center height-vh-25">
                <div class="col-md-5 py-5">
                    <form>
                        <div class="form-group">
                            <label for="email-signin">Email address</label>
                            <input type="email" class="form-control" id="email-signin">
                        </div>
                        <div class="form-group">
                            <label for="password-signin">Password</label>
                            <input type="password" class="form-control" id="password-signin">
                        </div>
                        <div class="form-group form-check d-flex flex-row justify-content-between">
                            <input type="checkbox" class="form-check-input" id="remember-signin">
                            <label class="form-check-label" for="remember-signin">Remember me</label>
                            <a href="#">Forgot password?</a>
                        </div>
                        <div class="form-group d-flex flex-column-reverse flex-md-row justify-content-center mt-5">
                            <a href="register.html" class="btn btn-secondary btn-wide btn-lg mr-3 mobile-mx-0">Register</a>
                            <button type="submit" class="btn btn-primary btn-wide btn-lg mobile-mb-3">Login</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
    
</main>
{% endblock %}
