<tr>
    <td class="w-66">
        <div class="d-flex flex-row">
            <div class="w-33 mr-2">
                <img src="holder.js/600x800?auto=yes" alt="" class="img-fluid">
            </div>
            <div>
                <p class="font-weight-bold mb-1">Gamila Skirt</p>
                <p class="small text-muted mb-1">
                    {% if isCartEditable == false %}
                    {{ [1,3,5] | random }}x
                    {% endif %}
                    IDR 350,000</p>
                <p class="small text-muted mb-0">{{ ['Coklat','Putih','Biru'] | random }}, All Size</p>
            </div>
        </div>
    </td>
    
    {% if isCartEditable == true %}
    <td class="qty">
        <div class="qty-input flex-row align-items-center">
            <i class="fal fa-minus"></i>
            <input class="mx-2 text-center" type="number" value="1">
            <i class="fal fa-plus"></i>
        </div>
    </td>
    {% endif %}

    <td class="small d-none d-sm-table-cell text-right">
        Rp 990,000
        <div class="remove mt-4 text-color-primary"><i class="fal fa-trash-alt"></i></div>
    </td>

</tr>