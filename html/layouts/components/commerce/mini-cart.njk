<div id="mini-cart" class="position-absolute">
    <div class="card border-light">
        <div class="card-header bg-secondary border-0 d-flex flex-row justify-content-between">
            <div><span class="font-weight-bold">My Cart, </span> 3 item</div>
            <div class="minicart-btn"><i class="fal fa-times"></i></div>
        </div>
        <div class="card-body py-0 px-3">
            <table class="reset table">
                <tbody>
                    {% set isCartEditable = false %}
                    {% for i in range(0,3) %}
                    {% include "components/commerce/cart-items.njk" %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="card-body p-0">
            <table class="reset table mb-0">
                <tfoot>
                    <tr>
                        <th class="small font-weight-bold pl-3">Sub-total</th>
                        <td class="small font-weight-bold pr-3 text-right">IDR 950,000</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        <div class="card-footer bg-transparent text-center py-4">
            <a href="checkout.html" class="btn btn-primary btn-block">Checkout</a>
            <a href="cart.html" class="small d-block text-reset mt-3">View Cart</a>
        </div>
    </div>
</div>