<div class="modal fade show" id="modal-sizeguide" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content border-0">
            <div class="modal-header border-bottom">
                <p class="m-0">Size Guide</p>
                <a class="small" href="#" data-dismiss="modal">Close</a>
            </div>
            <div class="modal-body">
                <h4>Body Measures</h4>
                {% for i in range(0,4) %}
                <table class="table table-striped table-responsive small text-center mb-5">
                    <tbody>
                        <tr>
                            <td>Size</td>
                            {% for i in range(24,34) %}
                            <td>{{i}}</td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td>Waist</td>
                            {% for i in range(62,72) %}
                            <td>{{i}}</td>
                            {% endfor %}
                        </tr>
                        <tr>
                            <td>Hip</td>
                            {% for i in range(88,98) %}
                            <td>{{i}}</td>
                            {% endfor %}
                        </tr>
                    </tbody>
                </table>
                {% endfor %}
            </div>
        </div>
    </div>
</div>