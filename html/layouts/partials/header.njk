                        {% include "components/commerce/mini-cart.njk" %}
                    </div>
                    <button id="hamburger" class="hamburger minus search-menu-btn ml-3" type="button" data-toggle="collapse" data-target="#mainMenu" aria-controls="mainMenu" aria-expanded="false" aria-label="Toggle navigation">
