</header>

<aside id="search-menu" class="position-fixed">
    
    <div class="container py-3">
        <div class="d-flex justify-content-center">
            <a href="#" class="close-header-btn" data-close="search-menu"><i class="fal fa-times fa-2x"></i></a>
        </div>
        <div class="search-wrapper row no-gutters justify-content-center align-items-center">
            <div class="col-12 col-md-8">
                <form action="" class="mb-2">
                    <h3 class="d-none d-md-block text-color-primary mb-4">Search</h3>
                    <input type="text" class="search form-control rounded-pill" placeholder="Search">
                </form>

                <ul class="list-unstyled mb-5 pt-3 px-3 bg-light">
                    {% for i in range(0,3) %}
                    <li class="media">
                        <a href="#"><img src="holder.js/50x50" class="mr-3 mb-3" alt="..."></a>
                        <div class="media-body">
                            <div class="small font-weight-bold">
                                <a href="#">Product Name {{i}}</a>
                            </div>
                            <div class="extra-small">IDR 99,000</div>
                        </div>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <div class="d-block d-md-none">
            <div class="row">
                {% for i in range(0,2) %}
                <div class="col-6">
                    <h6>Categories</h6>
                    <nav class="nav flex-column small mb-5">
                        <a class="nav-link px-0" href="#">All</a>
                        <a class="nav-link px-0" href="#">Jeans</a>
                        <a class="nav-link px-0" href="#">Pants</a>
                        <a class="nav-link px-0" href="#">Dresses</a>
                    </nav>
                </div>
                {% endfor %}
            </div>

            <hr>
            
            <nav class="nav flex-column small mb-5">
                <a class="nav-link px-0" href="#">Sign In</a>
            </nav>
        </div>
    </div>
</aside>

<aside id="shop-menu" class="position-fixed">
    <div class="container-fluid py-4">
        <div class="row no-gutters">
            <div class="col">
                <div class="row">
                    {% for i in range(0,3) %}
                    <div class="col-4">
                        <h6 class="text-color-primary-20">Categories</h6>
                        <nav class="nav flex-column small mb-5">
                            <a class="nav-link px-0" href="#">All</a>
                            <a class="nav-link px-0" href="#">Jeans</a>
                            <a class="nav-link px-0" href="#">Pants</a>
                            <a class="nav-link px-0" href="#">Dresses</a>
                        </nav>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <div class="col">
                <img src="holder.js/800x600?auto=yes" alt="" class="img-fluid">
            </div>
        </div>
    </div>
</aside>